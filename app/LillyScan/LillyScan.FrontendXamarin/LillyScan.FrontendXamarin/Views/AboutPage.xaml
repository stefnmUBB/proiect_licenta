<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LillyScan.FrontendXamarin.Views.AboutPage"
             xmlns:vm="clr-namespace:LillyScan.FrontendXamarin.ViewModels"
             xmlns:cam="clr-namespace:LillyScan.FrontendXamarin.Camera"
             xmlns:views="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="*,Auto">
        <cam:CameraPreview x:Name="CameraPreview" VerticalOptions="FillAndExpand" CapturePeeked="CameraPreview_CapturePeeked" Background="Green"></cam:CameraPreview>
        <!--views:SKCanvasView x:Name="Canvas" Grid.Row="0" PaintSurface="Canvas_PaintSurface"/-->
        <Image x:Name="Img" Grid.Row="0" Aspect="Fill"></Image>
        <Grid Grid.Row="1">
            
        </Grid>
    </Grid>

</ContentPage>
