<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LillyScan.FrontendXamarin.Views.Controls.BlitzToggle"
             x:Name="Control">
    <ContentView.Content>
        <Button x:Name="Button" Clicked="Button_Clicked">
            <Button.Clip>
                <PathGeometry Figures="M15,0 L24,0 L18,10 L25,10 L7,31 L13,17 L7,17 Z" />
            </Button.Clip>
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Style.Triggers>
                        <DataTrigger TargetType="{x:Type Button}" 
                                     Binding="{Binding Source={x:Reference Control},Path=IsChecked}" Value="True">
                            <Setter Property="BackgroundColor" Value="Yellow"/>
                        </DataTrigger>
                        <DataTrigger TargetType="{x:Type Button}" 
                                     Binding="{Binding Source={x:Reference Control},Path=IsChecked}" Value="False">
                            <Setter Property="BackgroundColor" Value="White"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </ContentView.Content>

</ContentView>