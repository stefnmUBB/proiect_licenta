<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LillyScan.Frontend.MainPage"
             xmlns:lv="clr-namespace:LillyScan.Frontend.View"
             xmlns:local="clr-namespace:LillyScan.Frontend">

    <ContentPage.Resources>
        <local:MyDrawable x:Key="drawable" />
    </ContentPage.Resources>

    <Grid RowDefinitions="*,*" ColumnDefinitions="*,*">
        <lv:CameraPreview Grid.RowSpan="2" Grid.ColumnSpan="2" x:Name="cameraView" HorizontalOptions="Fill" VerticalOptions="Fill"/>
        <GraphicsView Drawable="{StaticResource drawable}" x:Name="GraphicsView" HeightRequest="300" WidthRequest="400" />
        
    </Grid>
</ContentPage>
